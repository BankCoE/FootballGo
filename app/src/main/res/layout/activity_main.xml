<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    tools:context="com.thanachat.myfootball.MainActivity"
    android:background="@drawable/mainbg2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16px"
        android:paddingRight="16px"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/guide"
                android:id="@+id/guidetxt"
                android:onClick="enterGuide"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide"
                android:id="@+id/guidepic"
                android:onClick="enterGuide"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmbasico"
                android:id="@+id/mbasic"
                android:onClick="openmbasic"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mbasicclick"
                android:onClick="enterBasic"
                android:visibility="gone"
                android:id="@+id/menu_1"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmruleso"
                android:id="@+id/mrules"
                android:onClick="openmrules"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mrulesclick"
                android:onClick="enterRules"
                android:visibility="gone"
                android:id="@+id/menu_2"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmplano"
                android:id="@+id/mplan"
                android:onClick="openmplan"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mplanclick"
                android:onClick="enterPlan"
                android:visibility="gone"
                android:id="@+id/menu_3"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmmapo"
                android:id="@+id/mmap"
                android:onClick="openmmap"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mmapclick"
                android:onClick="enterMap"
                android:visibility="gone"
                android:id="@+id/menu_4"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmtraino"
                android:id="@+id/mtrain"
                android:onClick="openmtrain"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mtrainclick"
                android:onClick="enterTrain"
                android:visibility="gone"
                android:id="@+id/menu_5"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmcommito"
                android:id="@+id/mcommit"
                android:onClick="openmcommit"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mcommitclick"
                android:onClick="enterCommit"
                android:visibility="gone"
                android:id="@+id/menu_6"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nmlso"
                android:id="@+id/mls"
                android:onClick="openls"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mlsclick"
                android:onClick="enterLS"
                android:visibility="gone"
                android:id="@+id/menu_7"
                android:alpha="0.8"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
